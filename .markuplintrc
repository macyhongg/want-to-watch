{
  "rules": {
    "attr-duplication": true,
    "character-reference": true,
    "deprecated-attr": true,
    "deprecated-element": true,
    "doctype": true,
    "id-duplication": true,
    "permitted-contents": true,
    "required-attr": true,
    "invalid-attr": true,
    "landmark-roles": true,
    "required-h1": false,
    "wai-aria": true,
    "class-naming": "/.+/i",
    "case-sensitive-attr-name": true,
    "case-sensitive-tag-name": true
  },
  "nodeRules": [
    {
      "selector": "meta",
      "rules": {
        "invalid-attr": false,
        "required-attr": false
      }
    },
    {
      "selector": "link",
      "rules": {
        "character-reference": false
      }
    },
    {
      "selector": "img",
      "rules": {
        "character-reference": false
      }
    },
    {
      "selector": "a",
      "rules": {
        "character-reference": false
      }
    }
  ]
}
